{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 300,
  "title": "Entrance fees",
  "data": {
      "url": "https://raw.githubusercontent.com/yyhav1/fit3179_datavis2/main/data/nationalParkFees20.csv"
  },
  "encoding": {
    "x": {
      "field": "ShortName",
      "type": "nominal",
      "title": null,
      "sort": {"field": "VehicleFee", "op": "average", "order": "ascending"},
      "axis": {
        "labelAngle": -40
      }
      },
    "y": {"field": "VehicleFee", "type": "quantitative", "title": "Entrance fee"},
    "tooltip": [
      {"field": "ShortName", "title": "Park"},
      {"field": "State"},
      {"field": "Region"},
      {"field": "VehicleFee", "title": "Fee", "format": "$.0f"}
    ],
    "color": {
      "condition": {
        "param": "region_select",
        "field": "Region",
        "type": "nominal",
        "title": "Region (click to highlight)"
      },
      "value": "lightgrey"
    },
    "strokeWidth": {
      "condition": {
        "param": "hover",
        "empty": false,
        "value": 2
      },
      "value": 0
    }
  },
  "layer": [
    {
      "mark": {"type": "bar", "width": {"band": 0.5}, "cornerRadiusEnd": 6.5, "stroke": "black"},
      "params": [
        {
          "name": "region_select",
          "select": {"type": "point", "fields": ["Region"]},
          "bind":"legend"
        },
        {
          "name": "hover",
          "select": {"type": "point", "on": "mouseover"}
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "bottom",
        "dy": -2
      },
      "encoding": {
        "text": {"field": "VehicleFee", "title": "Fee", "type": "quantitative", "format": "$.0f"}
      }
    }
  ]
}