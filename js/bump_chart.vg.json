{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Park rankings over time",
  "params": [
    {
      "name": "park_select",
      "select": {"type": "point", "fields": ["ShortName"]},
      "bind": "legend"
    },
    {"name": "hover", "select": {"type": "point", "on": "mouseover"}}
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/yyhav1/fit3179_datavis2/main/data/nationalParkRanks.csv"
  },
  "mark": {"type": "line", "point": {"size": 100}, "size": 3},
  "encoding": {
    "x": {
      "field": "Date",
      "timeUnit": "year",
      "title": "",
      "type": "temporal",
      "axis": {"tickCount": 10}
    },
    "y": {
      "field": "Rank",
      "type": "quantitative",
      "title": "Visitor rank",
      "sort": "descending",
      "scale": {"domain": [1, 13]},
      "axis": {"grid": false}
    },
    "color": {
      "condition": {
        "param": "park_select",
        "field": "ShortName",
        "type": "nominal",
        "title": "Park",
        "scale": {"scheme": "tableau20"}
      },
      "value": "grey"
    },
    "opacity": {
      "condition": {"param": "park_select", "value": 1},
      "value": 0.2
    },
    "tooltip": [
      {"field": "ShortName", "title": "Park"},
      {"field": "State"},
      {"field": "Year"}, 
      {"field": "Rank"},
      {"field": "Recreation Visits", "title": "Visitors", "format": ".2s"}
    ]
  }
}