{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 300,
    "title": "Camping styles",
    "data": {
        "url": "https://raw.githubusercontent.com/yyhav1/fit3179_datavis2/main/data/nationalParkCamping.csv"
    },
    "mark": {"type": "bar", "width": 60, "cornerRadiusTopLeft": 3, "cornerRadiusTopRight": 3},
    "params": [
      {
        "name": "camping_type",
        "select": {"type": "point", "fields": ["Camping Type"]},
        "bind": "legend"
      }
    ],
    "transform": [
      {"filter": {"param": "camping_type"}}
    ],
    "encoding": {
      "x": {
        "timeUnit": "month",
        "field": "Date",
        "title": "Month of the year",
        "axis": {"zindex": 0, "grid": false}
      },
      "y": {
        "aggregate": "sum",
        "field": "Campers",
        "title": "Campers",
        "axis": {"format": ".2s"}
      },
      "color": {
        "field": "Camping Type",
        "title": "Camping type",
        "scale": {
          "domain": ["Backcountry", "RV", "Tent"],
          "range": ["#1b9e77", "#666666", "#d95f02"]
        }
      },
      "tooltip": [
        {"field": "Month", "timeUnit": "month", "format": "%B", "title": "Month"},
        {"field": "Camping Type", "title": "Camping type"},
        {"field": "Campers", "format": ","}
      ]
    }
  }